import bookList from './bookList.json';
import FaTimesCircle from 'react-icons/lib/fa/times-circle';
let books = bookList;

export default {
  getBooks: () => {
    return Promise.resolve( bookList )
  },
  
  updateBook: (newBook)=> {

    books = books.map(book=> 
      ( newBook.id !== book.id) ?
                           books : book
    );
    return Promise.resolve();
  },
  
  deleteook: (id)=> {
    
    books = books.map(book=> 
      ( book.id !== id) ?
                           books : undefined 
    ).filter(i => i)
    
    return Promise.resolve();
  }
  
}

